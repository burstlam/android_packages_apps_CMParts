<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- General settings -->
	<PreferenceCategory android:key="general_category"
		android:title="@string/general_title">

		<PreferenceScreen android:key="ui_power_widget_settings_menu"
			android:title="@string/title_expanded_widget">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="com.cyanogenmod.cmparts"
				android:targetClass="com.cyanogenmod.cmparts.activities.UIPowerWidgetActivity" />
		</PreferenceScreen>

        <PreferenceScreen android:key="ui_status_bar_menu"
            android:title="@string/ui_status_bar_title">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.cyanogenmod.cmparts"
                android:targetClass="com.cyanogenmod.cmparts.activities.UIStatusBarActivity" />
        </PreferenceScreen>

		<!-- LED notifications -->
		<PreferenceScreen android:key="trackball_notifications"
			android:title="@string/trackball_title" android:summary="@string/trackball_summary">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="com.cyanogenmod.cmparts"
				android:targetClass="com.cyanogenmod.cmparts.activities.led.NotificationActivity" />
		</PreferenceScreen>
	</PreferenceCategory>

        <PreferenceCategory android:title="@string/ui_power_menu_title">

		<!-- Power prompt -->
		<CheckBoxPreference android:key="power_dialog_prompt"
			android:title="@string/pref_power_prompt_title" android:summary="@string/pref_power_prompt_summary"
			android:defaultValue="true" />

		<!-- Airplane Mode toggle -->
               <CheckBoxPreference android:key="show_airplane_mode"
                        android:title="@string/title_show_airplane_mode" />

		<!-- ScreenShot toggle -->
               <CheckBoxPreference android:key="show_screenshot"
                        android:title="@string/title_show_screenshot" />

		<!-- Powersaver toggle -->
               <CheckBoxPreference android:key="show_power_saver"
                        android:title="@string/title_show_power_saver" />

		<!-- Profile toggle -->
               <CheckBoxPreference android:key="show_profile"
                        android:title="@string/title_show_profile" />

		<!-- Profile toggle -->
               <CheckBoxPreference android:key="show_silent"
                        android:title="@string/title_show_silent" />

    </PreferenceCategory>

	<PreferenceCategory android:title="@string/ui_overscroll_title">
		<!-- Render effect -->
		<ListPreference android:key="pref_render_effect"
			android:dialogTitle="@string/pref_render_effect_title" android:title="@string/pref_render_effect_title"
			android:summary="@string/pref_render_effect_summary" android:entries="@array/entries_render_effect"
			android:entryValues="@array/values_render_effect" />

		<CheckBoxPreference android:key="pref_pinch_reflow"
			android:title="@string/pref_pinch_reflow_title" android:summary="@string/pref_pinch_reflow_summary" />

		<CheckBoxPreference android:key="pref_share_screenshot"
			android:title="@string/pref_share_screenshot_title" android:summary="@string/pref_share_screenshot_summary" />

		<ListPreference android:key="pref_overscroll_effect"
			android:dialogTitle="@string/pref_overscroll_title" android:title="@string/pref_overscroll_title"
			android:summary="@string/pref_overscroll_summary" android:entries="@array/pref_overscroll_effect_entries"
			android:entryValues="@array/pref_overscroll_effect_values" />
		<ListPreference android:key="pref_overscroll_color"
			android:title="@string/pref_overscroll_color_title" android:summary="@string/pref_overscroll_color_summary"
			android:entries="@array/entries_overscroll_color"
			android:entryValues="@array/values_overscroll_color"/>
		<ListPreference android:key="pref_overscroll_weight"
			android:dialogTitle="@string/pref_overscroll_weight_title"
			android:title="@string/pref_overscroll_weight_title" android:summary="@string/pref_overscroll_weight_summary"
			android:entries="@array/entries_overscroll_weight"
			android:entryValues="@array/values_overscroll_weight" />
	</PreferenceCategory>

<!-- Boot Animation Chooser -->
  <PreferenceCategory android:title="@string/ui_bootanim_cat_title">
                <PreferenceScreen android:key="pref_bootanimation"
                        android:title="@string/pref_bootanimation_title" android:summary="@string/pref_bootanimation_summary">
                </PreferenceScreen>
                <PreferenceScreen android:key="pref_bootanimation_preview"
                        android:title="@string/pref_bootanimation_preview_title" android:summary="@string/pref_bootanimation_preview_summary">
                </PreferenceScreen>
                <PreferenceScreen android:key="pref_bootanimation_reset"
                        android:title="@string/pref_bootanimation_reset_title" android:summary="@string/pref_bootanimation_reset_summary">
                </PreferenceScreen>
  </PreferenceCategory>

<PreferenceCategory android:title="@string/fonts_change_title">
                 <PreferenceScreen android:key="fonts_settings"
                         android:title="@string/fonts_title" android:summary="@string/fonts_summary">
                         <intent android:action="android.intent.action.MAIN"
                                 android:targetPackage="com.cyanogenmod.cmfontschanger"
                                 android:targetClass="com.cyanogenmod.cmfontschanger.TypeFresh" />
                  </PreferenceScreen>
        </PreferenceCategory>


</PreferenceScreen>
